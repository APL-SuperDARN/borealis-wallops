chdir $BOREALISPATH

layout autosave on
layout new borealis
screen -t "Brian" bash -c "python3 -O brian/brian.py; bash"
split

split -v
focus right
screen -t "N200 Driver" bash -c "sleep 0.001s; source mode release; n200_driver > n200_output.txt; bash"

split -v
focus right
screen -t "Signal Processing" bash -c "sleep 0.001s; source mode release; signal_processing; bash;"

focus down
screen -t "Data Write" bash -c "sleep 0.001s; python3 -O data_write/data_write.py --file-type=hdf5 --enable-pre-bf-iq --enable-bfiq; bash;"

split -v
focus right
screen -t "Experiment Handler" bash -c "sleep 0.001s; python3 experiment_handler/experiment_handler.py twofsound ; bash;"

split -v
focus right
screen -t "Radar Control" bash -c "sleep 0.001s; python3 -O radar_control/radar_control.py; bash;"

split -v
focus right
screen -t "Cpu Affinity" bash -c "sleep 0.001s; python3 -O usrp_drivers/n200/set_affinity.py; bash;"

